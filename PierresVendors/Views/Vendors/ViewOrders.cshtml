@{
  Layout = "_Layout";
}
@using PierresVendors.Models;
<div class="vendor">
<h1>Our orders from @Model.Name:</h1>
<a href="/vendors/@Model.Id/orders/new">Click here to enter a new order.</a><br>
@foreach (Order o in Model.Orders)
{
  <div class="order">
    <h2>@o.Title</h2>
    <p>@o.Description</p>
    <h2>Price: $@o.Price</h2>
    <h2>Date: @o.Date</h2>
  </div>
}
<a href="/vendors/@Model.Id/orders/new">Click here to enter a new order.</a><br>
</div>
<a href="/vendors/@Model.Id">Back</a>